generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pedido {
  id              String    @id @default(uuid()) 
  tipo            TipoPedido // Enum para identificar o tipo de pedido (UPLOAD, DOWNLOAD, DELETE, RENAME)
  status          StatusPedido 
  origem          String
  solicitanteId   String? 
  documentoId     String?
  nomeOriginal    String? 
  caminhoMinIO    String? 
  metadadosIniciais Json? // Metadados enviados no pedido original
  mensagemErro    String? 
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}


enum TipoPedido {
  UPLOAD
  DOWNLOAD
  DELETE
  RENAME
}

enum StatusPedido {
  PENDING
  RECEIVED_BY_INGESTION // Para upload
  PROCESSING_STARTED    // Para upload
  AIP_CREATED_TEMP      // Para upload
  AIP_UPLOADED_TO_MINIO // Para upload
  COMPLETED             // Para todos os tipos
  FAILED                // Para todos os tipos
  MARKED_FOR_DELETION   // Para delete
  DELETED_FROM_MINIO    // Para delete
}